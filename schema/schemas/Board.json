{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "additionalProperties": false,
    "anyOf": [
        {"$ref": "#/$defs/RevealedBoard"},
        {"$ref": "#/$defs/HiddenBoard"}
    ],
    "$defs": {
        "RevealedBoard": {
            "additionalProperties": false,
            "required": ["board", "width", "height"],
            "properties": {
                "board": {"type": "array", "items": {"type": "array", "items": {"$ref": "./Cell.json"}}},
                "hidden": { "enum": [ false ]},
                "width": {"type": "number"},
                "height": {"type": "number"}
            }
        },
        "HiddenBoard": {
            "additionalProperties": false,
            "required": ["hidden", "width", "height"],
            "properties": {
                "hidden": { "enum": [ true ]},
                "width": {"type": "number"},
                "height": {"type": "number"}
            }
        }
    }
}