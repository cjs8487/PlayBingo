{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "id",
        "nickname",
        "color",
        "goalCount",
        "raceStatus",
        "spectator",
        "monitor"
    ],
    "properties": {
        "id": {
            "type": "string"
        },
        "nickname": {
            "type": "string"
        },
        "color": {
            "type": "string"
        },
        "goalCount": {
            "type": "number"
        },
        "raceStatus": {
            "oneOf": [
                {
                    "$ref": "#/$defs/RaceStatusDisconnected"
                },
                {
                    "$ref": "#/$defs/RaceStatusConnected"
                }
            ]
        },
        "spectator": {
            "type": "boolean"
        },
        "monitor": {
            "type": "boolean"
        }
    },
    "$defs": {
        "RaceStatusDisconnected": {
            "required": [
                "connected"
            ],
            "additionalProperties": false,
            "properties": {
                "connected": {
                    "const": false
                }
            }
        },
        "RaceStatusConnected": {
            "required": [
                "connected",
                "username",
                "status"
            ],
            "additionalProperties": false,
            "properties": {
                "connected": {
                    "const": true
                },
                "username": {
                    "type": "string",
                    "description": "Username connected to this player for the race, if it is separate from PlayBingo"
                },
                "ready": {
                    "type": "boolean"
                },
                "finishTime": {
                    "type": "string",
                    "description": "Race finish time (ISO 8601 duration)"
                }
            }
        }
    }
}